{
    "name": "mtutty/phpchunkit",
    "type": "library",
    "description": "PHPUnit Test Runner",
    "keywords": ["tests", "phpunit"],
    "homepage": "http://github.com/mtutty/phpchunkit",
    "license": "MIT",
    "authors": [
        {"name": "Michael Tutty", "email": "michael.tutty@gmail.com"}
    ],
    "autoload": {
        "psr-0": {
            "PHPChunkit": "src/",
            "PHPChunkit\\Test": "tests/"
        }
    },
    "require": {
        "php": ">=5.6.0",
        "phpunit/phpunit": ">=4.5",
        "symfony/console": "^3.1",
        "symfony/process": "^3.1",
        "symfony/stopwatch": "^3.1",
        "symfony/finder": "^3.1",
        "symfony/event-dispatcher": "^3.1"
    },
    "require-dev": {
        "ext-pdo": "*"
    },
    "suggest": {
        "ext-pdo_mysql": "*"
    },
    "bin": [
        "bin/phpchunkit"
    ]
}
